<div class="container width-session">
  <div class="card m-2 p-5 mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6 col-xs-12 ju">
        <h3>Enviar</h3>
        <%= simple_form_for @order, url: ship_order_path(@order), method: :patch do |f| %>
        <div class="form-inputs">
          <%= f.input :shipping_address,
                      required: true,
                      autofocus: true,
                      input_html: { id: 'shipping_address'} %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Pagar", class: "btn btn-flat" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
